{
  "name": "municipalidad-ivochote",
  "version": "1.0.0",
  "description": "Sitio web oficial de la Municipalidad de Ivochote - Plataforma digital gubernamental",
  "main": "index.html",
  "keywords": [
    "municipalidad",
    "ivochote",
    "gobierno",
    "peru",
    "municipal",
    "transparencia",
    "servicios",
    "ciudadania"
  ],
  "author": {
    "name": "Tu Instagram @tu_usuario",
    "email": "tu.email@ejemplo.com",
    "url": "https://instagram.com/tu_usuario"
  },
  "license": "MIT",
  "homepage": "https://municipalidad-ivochote.netlify.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/tu-usuario/municipalidad-ivochote.git"
  },
  "bugs": {
    "url": "https://github.com/tu-usuario/municipalidad-ivochote/issues"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "npm run watch:css",
    "build": "npm run build:css && npm run minify:js && npm run optimize:images",
    "build:css": "tailwindcss -i ./css/tailwind.css -o ./css/output.css --minify",
    "watch:css": "tailwindcss -i ./css/tailwind.css -o ./css/output.css --watch",
    "minify:js": "terser js/main.js js/darkmode.js js/chatbot.js js/whatsapp.js js/interacciones.js --compress --mangle -o js/bundle.min.js",
    "optimize:images": "imagemin assets/img/*.{jpg,jpeg,png} --out-dir=assets/img/optimized --plugin=imagemin-mozjpeg --plugin=imagemin-pngquant",
    "lighthouse": "lighthouse https://municipalidad-ivochote.netlify.app --output=html --output-path=./reports/lighthouse.html",
    "validate:html": "html-validate *.html",
    "test:accessibility": "pa11y https://municipalidad-ivochote.netlify.app",
    "analyze:bundle": "bundlesize",
    "serve": "live-server --port=3000 --host=localhost",
    "clean": "rm -rf css/output.css js/bundle.min.js assets/img/optimized reports",
    "deploy": "npm run build && netlify deploy --prod",
    "preview": "npm run build && npm run serve"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.16",
    "bundlesize": "^0.18.1",
    "html-validate": "^8.6.0",
    "imagemin": "^8.0.1",
    "imagemin-cli": "^7.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "lighthouse": "^11.3.0",
    "live-server": "^1.2.2",
    "netlify-cli": "^17.10.1",
    "pa11y": "^8.0.0",
    "postcss": "^8.4.32",
    "postcss-cli": "^10.1.0",
    "tailwindcss": "^3.3.6",
    "terser": "^5.25.0"
  },
  "dependencies": {
    "alpinejs": "^3.13.3"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "bundlesize": [
    {
      "path": "./css/output.css",
      "maxSize": "50 kB"
    },
    {
      "path": "./js/bundle.min.js",
      "maxSize": "100 kB"
    }
  ],
  "config": {
    "site": {
      "name": "Municipalidad de Ivochote",
      "description": "Portal oficial de la Municipalidad de Ivochote",
      "url": "https://municipalidad-ivochote.netlify.app",
      "language": "es-PE",
      "locale": "es_PE"
    },
    "build": {
      "outputDir": "dist",
      "assetsDir": "assets"
    },
    "optimization": {
      "images": true,
      "css": true,
      "js": true,
      "html": true
    }
  },
  "volta": {
    "node": "18.18.2",
    "npm": "9.8.1"
  }
}